/* If deleting instances */

{   "Version": "2022-10-24",
   "Statement": [
     {  "Sid": "VisualEditor0",
        "Effect": "Allow",
        "Action": "ec2:TerminateInstances",
        "Resource": "arn:aws:ec2:us-east-1::instance/*",
        "Condition": {
            "BoolIfExists": {
                "aws:MultiFactorAuthPresent": "true"
                                           }}}]}
